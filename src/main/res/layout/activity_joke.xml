<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.wmich.lab1jvandyk5713.JokeActivity"
    android:id="@+id/txtViewAnswer">

    <!--
 Programmer: John VanDyke
 Class ID: jvandyk5713
 Lab #1
 CIS 2610: Business Mobile Programming
 Fall 2015
 Due date: 10/1/2015
 Date completed: 10/1/2015
 *************************************
 The activity_joke.xml file was created for the layout of ActivityJoke.java.  This file contains the
 TextView that displays @string/txtViewAnswer.  It also contains the ImageView that contains
 the drawable laughingemoji.png.  This XML file is responsible for the the layout of all widgets.
 *************************************
 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewAnswer"
        android:id="@+id/txtViewAnswer"
        android:layout_marginTop="43dp"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLaughingEmoji"
        android:contentDescription="@string/imgLaughingEmoji"
        android:src="@drawable/laughingemoji"
        android:layout_below="@+id/txtViewAnswer"
        android:layout_alignParentStart="true" />

</RelativeLayout>
